@using LeaveManagement.web.ViewModels
@model LeaveTypeVM

@{
    Layout=null;
}

<div class="row">
    <div class="col-md-12">
   
            <form asp-action="CreateOrEdit" asp-route-id="@Model.Id" method="post" onsubmit="return jQueryAjaxPost(this)" >
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                     <div class="form-group col-md-6 mb-4">
                         <label asp-for="Name" class="control-label"></label>
                         <input asp-for="Name" class="form-control" />
                         <span asp-validation-for="Name" class="text-danger"></span>
                     </div>
                     <div class="form-group col-md-6 mb-4">
                         <label asp-for="DefaultDays" class="control-label"></label>
                         <input asp-for="DefaultDays" class="form-control" />
                         <span asp-validation-for="DefaultDays" class="text-danger"></span>
                     </div>
                 </div>
                <div clas="row">
                    <div class=" col-md-12 mb-4 text-center">
                       <input type="submit" value="ثبت مرخصی" class="btn btn-primary btn-lg col-md-4 " />
                       <div class="col-md-2 mb-4"></div>
                    </div>
                </div>

            </form>
       

    </div>
</div>



